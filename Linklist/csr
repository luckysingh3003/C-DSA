#include <stdio.h>

#define ROW 3
#define COL 4

int main() {
    int A[ROW][COL] = {
        {0, 0, 3, 0},
        {22, 0, 0, 0},
        {7, 5, 0, 1}
    };

    int values[100], colIndex[100], rowPtr[ROW + 1];
    int k = 0, i, j;

    rowPtr[0] = 0;
    for (i = 0; i < ROW; i++) {
        for (j = 0; j < COL; j++) {
            if (A[i][j] != 0) {
                values[k] = A[i][j];
                colIndex[k] = j;
                k++;
            }
        }
        rowPtr[i + 1] = k;  
    }

    
    printf("Values: ");
    for (i = 0; i < k; i++) printf("%d ", values[i]);

    printf("\nColIndex: ");
    for (i = 0; i < k; i++) printf("%d ", colIndex[i]);

    printf("\nRowPtr: ");
    for (i = 0; i <= ROW; i++) printf("%d ", rowPtr[i]);

    return 0;
}
